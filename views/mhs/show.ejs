<div class="container">
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title"><strong>Data Master - Mahasiswa</strong></h3>
		</div><!--/panel-heading-->

		<div class="panel-body">
		  
			<table border=0 class='table'>
				<tr>
					<td>  
						<form class="form-inline" role="form">
							<div class="form-group">
								<label for="txtnrp">NRP</label>
							
								<% if (NRPSearch === '') { %>
								<input type="text" class"form-control" placeholder="Search" name="nrp" id="txtnrp" maxlength=10 onkeypress="return isNumberKey(event)"></input>
								<% } else { %>
								<input type="text" class"form-control" placeholder="Search" name="nrp" id="txtnrp" maxlength=10 onkeypress="return isNumberKey(event)" value=<%= NRPSearch %> ></input>
								<% } %>
								
							</div>
							<button type="submit" class="btn btn-default">Cari</button>
						</form>
					</td>
					<td width=5%>  
						<a class="btn btn-medium btn-primary" href="/mhs/new/">Tambah</a>
					</td>
				</tr>
			</table><!--/table-->

			
			<% var counter = 1; %>
			<table class='table'>
				<tr class="success">
					<th>No</th>
					<th>NRP</th>
					<th>Nama</th>
					<th></th>
					<th></th>
				</tr>
				
				<% _.each(mhs, function(mhs) { %>
				
				<% 	if (NRPSelect === mhs.nrp) { %>
				<tr class="danger" data-id="<%= mhs.id %>" data-model="mhs">
				<%	} else { %>
				<tr data-id="<%= mhs.id %>" data-model="mhs">
				<%	} %>
				
					<td><%= counter++ %></td>
					<td><%= mhs.nrp %></td>
					<td><%= mhs.nama %></td>
					
					<td><a href="/mhs/edit/<%= mhs.id %>" class="btn btn-sm btn-warning">Ubah</a></td>
		
					<td><form action="/mhs/del/<%= mhs.id %>" method="POST">
						<input type="hidden" name="_method" value="delete"/>
						<input type="submit" class="btn btn-sm btn-danger" value="Hapus"/>
					</form></td>
				</tr> 
				<% }) %>
			</table><!--/table-->
			
		</div><!--/panel-body-->
	</div><!--/panel-primary-->
</div><!--/container-->

<script>
	function isNumberKey(evt) {
		var charCode = (evt.which) ? evt.which : event.keyCode
		if (charCode > 31 && (charCode < 48 || charCode > 57))
			return false;
		return true;
	}
</script>

