<form action="/kuliah/update/<%= kuliah.id %>" method="POST" id="form-edit" class="form-bayuz">
	<h2 class="form-signin-heading">Edit Data MataKuliah</h2>

	<div class="form-group">
	<label for="txtkode">Kode</label>
	<input type="text" class="form-control" value="<%= kuliah.kode %>" name="kode" id="txtkode" maxlength=8 readonly=''>
	</div>

	<div class="form-group">
	<label for="txtnama">Nama</label>
	<input type="text" class="form-control" value="<%= kuliah.nama %>" name="nama" id="txtnama" maxlength=45>
	</div>

	<div class="form-group">
	<label for="txtsks">SKS</label>
	<input type="text" class="form-control" value="<%= kuliah.sks %>" name="sks" id="txtsks" maxlength=1 onkeypress="return isNumberKey(event)">
	</div>
	
	<div class="form-group">
	<label for="seldosen">Dosen</label>
		<select class="form-control" name="id_dosen" id="seldosen">
		<% _.each(dosen, function(dosen) { %>
			<% if (dosen.id == kuliah.id_dosen) { %> 
			<option value="<%= dosen.id %>" selected> <%= dosen.nama %> </option>
			<% } else { %>
			<option value="<%= dosen.id %>"> <%= dosen.nama %> </option>
			<% } %>
		<% }) %>
		</select>
	</div>
	
	<input type="submit" class="btn btn-lg btn-primary btn-block" value="Perbarui"/>
</form>

<script>
	function isNumberKey(evt) {
		var charCode = (evt.which) ? evt.which : event.keyCode
		if (charCode > 31 && (charCode < 48 || charCode > 57))
			return false;
		return true;
	}
</script>

